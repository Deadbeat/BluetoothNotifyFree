<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.deadbeat.bluetoothalertfree"
      android:versionName="1.5b" android:versionCode="7">
    <application android:icon="@drawable/icon" android:label="@string/app_name"
    				android:debuggable="false" >

        <activity android:name=".BluetoothNotifyMain" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    
    	<activity android:name="BluetoothNotifyWorker">
    		<intent-filter>
    			<action android:name=".BluetoothNotifyWorker"></action>
    		</intent-filter>
    	</activity>
    	
		<activity android:name="DeviceOptions" android:label="Device Options">
			<intent-filter>
				<action android:name=".DeviceOptions"></action>
			</intent-filter>
		</activity>

		<service android:label="Bluetooth Notify (Service)" android:name="BTNotifyService">
			<intent-filter>
				<action android:name=".BTNotifyService"></action>
			</intent-filter>
		</service>
		
		<receiver android:name=".StartAtBootServiceReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<category android:name="android.intent.category.HOME"/>
			</intent-filter>
		</receiver>
</application>
	
	<uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> 
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>

</manifest> 